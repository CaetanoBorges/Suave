					BoxLayout:
						orientation:'horizontal'
						BoxLayout:
							size_hint:.6,1
							Button:
								text:root.n_tpa()
						BoxLayout:
							Button:
								text:root.tpa()
				BoxLayout:
					padding:2
					orientation:'vertical'
					BoxLayout:
						Button:
				


			BoxLayout:
            	size_hint:1,.3
            	Button:
            		canvas:
						Color:
							rgb:[1,1,.1]
						Rectangle:
							pos: self.pos
							size:self.size	
					on_release: app.root.current='TelaControleUm'
            	Button:
            		on_release: app.root.current='TelaPrincipal'
				            		
            	Button:
            		canvas:
						Color:
							rgb:[1,0,0]
						Rectangle:
							pos: self.pos
							size:self.size	

