#: import sm kivy.uix.screenmanager

<MyImage@Image>:
	keep_ratio: False
	allow_stretch: True

GestorDeTela:
	transition: sm.FadeTransition()
	id:gestordetela
	TelaPrincipal:
		id:tela_principal
		name:'TelaPrincipal'
		manager:'gestordetela'
	TelaControleUm:
		id:tela_controleum
		name:'TelaControleUm'
		manager:'gestordetela'
	TelaControleDois:
		id:tela_controledois
		name:'TelaControleDois'
		manager:'gestordetela'
	TelaFaturas:
		id:tela_faturas
		name:'TelaFaturas'
		manager:'gestordetela'
	TelaTodosDias:
		id:tela_todosdias
		name:'TelaTodosDias'
		manager:'gestordetela'


<TelaPrincipal>:
	canvas:
		Color:
			rgb:[1,1,1]
		Rectangle:
			pos: self.pos
			size:self.size	

	ScrollView:
		BoxLayout:
			orientation: 'vertical'
            padding: 10
            spacing: 5
            size_hint:1,1
            height: self.minimum_height
            BoxLayout:
            	orientation:'vertical'
	            BoxLayout:
	            	size_hint:1,.3
			        MyImage:
						source:'img/suave.jpg'
				BoxLayout:
					size_hint:1,.9
					canvas:
						Color:
							rgb:[1,1,1]
						Rectangle:
							pos: self.pos
							size:self.size
							source:'img/kwanza.jpg'
					Label:
						text : root.min()

			
            BoxLayout:
            	orientation:'horizontal'
            	BoxLayout:
            		orientation:'vertical'
            		Button:
            			text:'Faturas'
            			size_hint:1,.1
            			on_release: app.root.current='TelaFaturas'
            		Button:
            			text:''
            			size_hint:1,.2
            	BoxLayout:
            		orientation:'vertical'
            		Button:
            			text:'Controle'
            			on_release: app.root.current='TelaControleUm'
            			size_hint:1,.1
            		Button:
            			text:'Op Nuvem'
            			size_hint:1,.2

            BoxLayout:
            	size_hint:1,.2
            	Button:
            		canvas:
						Color:
							rgb:[1,1,.1]
						Rectangle:
							pos: self.pos
							size:self.size	
					on_release: app.root.current='TelaControleUm'
            	Button:
            		
				            		
            	Button:
            		canvas:
						Color:
							rgb:[1,0,0]
						Rectangle:
							pos: self.pos
							size:self.size	
            		

<TelaControleUm>:
	canvas:
		Color:
			rgb:[1,1,1]
		Rectangle:
			pos: self.pos
			size:self.size	

	ScrollView:
		BoxLayout:
			orientation: 'vertical'
            padding: 10
            spacing: 5
            size_hint:1,1
            height: self.minimum_height
            BoxLayout:
            	orientation:'vertical'
	            size_hint:1,.3
			    MyImage:
					source:'img/suave.jpg'
			BoxLayout:
				BoxLayout:
					orientation:'vertical'
					Button:
						text:'Dia'
						size_hint:1,.1
						height:80
						on_release: app.root.current='TelaControleDois'
					Button:
						text:'30 Dias'
						size_hint:1,.1
						height:80
					Button:
						text:'Quantos Dias?'
						size_hint:1,.1
						height:80
				BoxLayout:
					orientation:'vertical'
					Button:
						text:'7 Dias'
						size_hint:1,.1
						height:80
					Button:
						text:'60 Dias'
						size_hint:1,.1
						height:80
					Button:
						text:'Todos Dias'
						size_hint:1,.1
						height:80
			MyImage:
				source:'img/ouro.jpg'

			BoxLayout:
            	size_hint:1,.2
            	Button:
            		canvas:
						Color:
							rgb:[1,1,.1]
						Rectangle:
							pos: self.pos
							size:self.size	
					on_release: app.root.current='TelaPrincipal'
            	Button:
            		on_release: app.root.current='TelaPrincipal'
				            		
            	Button:
            		canvas:
						Color:
							rgb:[1,0,0]
						Rectangle:
							pos: self.pos
							size:self.size	

